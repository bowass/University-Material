\begin_layout Claim*
לכל 
\begin_inset Formula $x,y\in G$
\end_inset

 מתקיים 
\begin_inset Formula $o\left(x\right)=o\left(yxy^{-1}\right)$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
נוכיח עבור סדרים סופיים.
\end_layout

\begin_layout Proof
נסמן 
\begin_inset Formula $o\left(x\right)=n$
\end_inset

 ו-
\begin_inset Formula $o\left(yxy^{-1}\right)=m$
\end_inset

.
 נראה כי 
\begin_inset Formula $m\mid n\wedge n\mid m$
\end_inset

, ומכך בגלל ש-
\begin_inset Formula $n,m\in\mathbb{N}$
\end_inset

 נקבל 
\begin_inset Formula $n=m$
\end_inset

.
\end_layout

\begin_layout Proof
\begin_inset Formula 
\begin{align*}
\left(yxy^{-1}\right)^{n} & =\left(yxy^{-1}\right)\left(yxy^{-1}\right)\cdots\left(yxy^{-1}\right)\\
 & =yx^{n}y^{-1}=yey^{-1}=e\Longrightarrow m\mid n
\end{align*}

\end_inset


\begin_inset Formula 
\[
e=\left(yxy^{-1}\right)^{m}=yx^{m}y^{-1}
\]

\end_inset


\begin_inset Formula 
\[
\Longrightarrow y^{-1}ey=x^{m}\Longrightarrow x^{m}=e\Longrightarrow n\mid m
\]

\end_inset


\end_layout

\begin_layout Proof
בסך הכל, קיבלנו כי 
\begin_inset Formula $n=m$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

