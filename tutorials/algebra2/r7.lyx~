\begin_layout Remark*
\begin_inset Formula $\left(\begin{array}{cc}
x & y\end{array}\right)=\left(\begin{array}{cc}
y & x\end{array}\right)$
\end_inset

.
\end_layout

\begin_layout Example*
תמורה הופכית.
\begin_inset Formula 
\[
\left(\begin{array}{cccc}
1 & 2 & 3 & 4\end{array}\right)^{-1}=\left(\begin{array}{cccc}
1 & 4 & 3 & 2\end{array}\right)=\left(\begin{array}{cccc}
4 & 3 & 2 & 1\end{array}\right)
\]

\end_inset


\begin_inset Formula 
\[
\left(\begin{array}{cccc}
1 & 2 & 3 & 4\end{array}\right)\left(\begin{array}{cccc}
1 & 4 & 3 & 2\end{array}\right)=\left(\begin{array}{c}
1\end{array}\right)\left(\begin{array}{c}
4\end{array}\right)\left(\begin{array}{c}
3\end{array}\right)\left(\begin{array}{c}
2\end{array}\right)=id
\]

\end_inset


\end_layout

\begin_layout Example*
נמצא את התמורה ההופכית של 
\begin_inset Formula $\left(\begin{array}{ccc}
1 & 5 & 9\end{array}\right)\left(\begin{array}{cc}
2 & 3\end{array}\right)\left(\begin{array}{cccc}
6 & 10 & 7 & 8\end{array}\right)$
\end_inset

:
\begin_inset Formula 
\[
\left(\left(\begin{array}{ccc}
1 & 5 & 9\end{array}\right)\left(\begin{array}{cc}
2 & 3\end{array}\right)\left(\begin{array}{cccc}
6 & 10 & 7 & 8\end{array}\right)\right)^{-1}=\left(\begin{array}{ccc}
1 & 9 & 5\end{array}\right)\left(\begin{array}{cc}
2 & 3\end{array}\right)\left(\begin{array}{cccc}
6 & 8 & 7 & 10\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Example*
הרכבת תמורות בצורה מעגלית.
\end_layout

\begin_layout Example*
\begin_inset Formula 
\[
\left(\begin{array}{cccc}
1 & 2 & 4 & 7\end{array}\right)\left(\begin{array}{cc}
6 & 8\end{array}\right)\circ\left(\begin{array}{cccccc}
6 & 9 & 1 & 3 & 2 & 7\end{array}\right)\circ\left(\begin{array}{cc}
8 & 10\end{array}\right)=\left(\begin{array}{ccccccccc}
8 & 10 & 6 & 9 & 2 & 1 & 3 & 4 & 7\end{array}\right)
\]

\end_inset


\begin_inset Formula 
\[
\left(\begin{array}{cc}
1 & 4\end{array}\right)\left(\begin{array}{cc}
2 & 3\end{array}\right)\circ\left(\begin{array}{cc}
1 & 2\end{array}\right)\left(\begin{array}{cc}
3 & 4\end{array}\right)=\left(\begin{array}{cc}
1 & 3\end{array}\right)\left(\begin{array}{cc}
2 & 4\end{array}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

