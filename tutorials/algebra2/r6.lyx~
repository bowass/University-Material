\begin_deeper
\begin_layout Enumerate
נמצא איבר כללי ב-
\begin_inset Formula $U^{\perp}$
\end_inset

:
\begin_inset Formula 
\[
A=\left[\begin{array}{cc}
x & y\\
z & w
\end{array}\right]\in U^{\perp}\iff\left\langle A,M_{1}\right\rangle =0=\left\langle A,M_{2}\right\rangle 
\]

\end_inset


\begin_inset Formula 
\[
\left\langle A,M_{1}\right\rangle =\text{tr}\left(M_{1}^{t}A\right)=\text{tr}\left(\left[\begin{array}{cc}
1 & 0\\
0 & 1
\end{array}\right]^{t}\left[\begin{array}{cc}
x & y\\
z & w
\end{array}\right]\right)=\text{tr}\left[\begin{array}{cc}
x & y\\
z & w
\end{array}\right]=x+w
\]

\end_inset


\begin_inset Formula 
\[
\left\langle A,M_{2}\right\rangle =\text{tr}\left(M_{2}^{t}A\right)=\text{tr}\left(\left[\begin{array}{cc}
0 & 1\\
1 & 0
\end{array}\right]^{t}\left[\begin{array}{cc}
x & y\\
z & w
\end{array}\right]\right)=\text{tr}\left[\begin{array}{cc}
z & w\\
x & y
\end{array}\right]=z+y
\]

\end_inset


\begin_inset Formula 
\[
\left\langle A,M_{1}\right\rangle =0=\left\langle A,M_{2}\right\rangle \iff x+w=0=z+y\iff\left(w=ix\wedge z=-y\right)
\]

\end_inset


\begin_inset Formula 
\[
\iff A=\left[\begin{array}{cc}
x & y\\
-y & -x
\end{array}\right]\Longrightarrow\boxed{U^{\perp}=\text{span}\left\{ \left[\begin{array}{cc}
1 & 0\\
0 & -1
\end{array}\right],\left[\begin{array}{cc}
0 & 1\\
-1 & 0
\end{array}\right]\right\} }
\]

\end_inset

 ברור ש-
\begin_inset Formula $\left[\begin{array}{cc}
1 & 0\\
0 & -1
\end{array}\right],\left[\begin{array}{cc}
0 & 1\\
-1 & 1
\end{array}\right]$
\end_inset

 בת
\begin_inset Quotes erd
\end_inset

ל ולכן מהוות בסיס.
\end_layout

\begin_layout Enumerate
מאחר ו-
\begin_inset Formula $V=U\oplus U^{\perp}$
\end_inset

, איחוד הבסיסים של 
\begin_inset Formula $U,U^{\perp}$
\end_inset

 מהווה בסיס ל-
\begin_inset Formula $V$
\end_inset

, נבצע עליו גרם-שמידט:
\end_layout

\begin_deeper
\begin_layout Enumerate
ננרמל את 
\begin_inset Formula $M_{1}$
\end_inset

:
\begin_inset Formula 
\[
\left\langle M_{1},M_{1}\right\rangle =\text{tr}\left(M_{1}^{t}M_{1}\right)=2
\]

\end_inset


\begin_inset Formula 
\[
v_{1}=\frac{1}{\left\Vert M_{1}\right\Vert }\cdot M_{1}=\frac{1}{\sqrt{2}}M_{1}=\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Enumerate
כעת למטריצה השנייה:
\begin_inset Formula 
\[
\tilde{v_{2}}=M_{2}-\left\langle M_{2},v_{1}\right\rangle \cdot v_{1}=M_{2}-{\color{gray}\underset{0}{\underbrace{{\normalcolor \text{tr}\left(v_{1}^{t}M_{2}\right)}}}}\cdot v_{1}=M_{2}
\]

\end_inset


\begin_inset Formula 
\[
\left\Vert M_{2}\right\Vert =\sqrt{\left\langle M_{2},M_{2}\right\rangle }=\sqrt{\text{tr}\left(M_{2}^{t}M_{2}\right)}=\sqrt{2}
\]

\end_inset


\begin_inset Formula 
\[
\Longrightarrow v_{2}=\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Enumerate
נעבור ל-
\begin_inset Formula $v_{3}$
\end_inset

:
\begin_inset Formula 
\[
\tilde{v_{3}}=M_{3}-\left\langle M_{3},v_{1}\right\rangle \cdot v_{1}-\left\langle M_{3},v_{2}\right\rangle \cdot v_{2}\underset{M_{3}\in U^{\perp}}{=}M_{3}
\]

\end_inset


\begin_inset Formula 
\[
\left\Vert M_{3}\right\Vert =\sqrt{\left\langle M_{3},M_{3}\right\rangle }=\sqrt{\text{tr}\left(\left[\begin{array}{cc}
1 & 0\\
0 & -1
\end{array}\right]^{t}\left[\begin{array}{cc}
1 & 0\\
0 & -1
\end{array}\right]\right)}=\sqrt{2}
\]

\end_inset


\begin_inset Formula 
\[
\Longrightarrow v_{3}=\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & -1\slash\sqrt{2}
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Enumerate
לבסוף, נמצא את 
\begin_inset Formula $v_{4}$
\end_inset

:
\begin_inset Formula 
\[
\tilde{v_{4}}=M_{4}-\sum_{i=1}^{3}\left\langle M_{4},v_{i}\right\rangle \cdot v_{i}=M_{4}
\]

\end_inset


\begin_inset Formula 
\[
\left\Vert M_{4}\right\Vert =\sqrt{2}\Longrightarrow v_{4}=\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
-1\slash\sqrt{2} & 0
\end{array}\right]
\]

\end_inset


\begin_inset Formula 
\[
\Longrightarrow\boxed{\left\{ \left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right],\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right],\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & -1\slash\sqrt{2}
\end{array}\right],\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
-1\slash\sqrt{2} & 0
\end{array}\right]\right\} }
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
נפתור בשתי דרכים:
\end_layout

\begin_deeper
\begin_layout Enumerate
נרשום את 
\begin_inset Formula $\left[\begin{array}{cc}
2 & 1\\
3 & 4
\end{array}\right]$
\end_inset

 כצירוף לינארי של הבסיסים של 
\begin_inset Formula $U,U^{\perp}$
\end_inset

:
\begin_inset Formula 
\[
\left[\begin{array}{cc}
2 & 1\\
3 & 4
\end{array}\right]={\color{gray}\underset{\in U}{\underbrace{{\normalcolor 3\cdot\left[\begin{array}{cc}
1 & 0\\
0 & 1
\end{array}\right]+2\cdot\left[\begin{array}{cc}
0 & 1\\
1 & 0
\end{array}\right]}}}}{\color{gray}\underset{\in U^{\perp}}{\underbrace{{\normalcolor -\left[\begin{array}{cc}
1 & 0\\
0 & -1
\end{array}\right]-\left[\begin{array}{cc}
0 & 1\\
-1 & 1
\end{array}\right]}}}}
\]

\end_inset


\begin_inset Formula 
\[
\Longrightarrow\text{P}_{U}^{\perp}\left(\left[\begin{array}{cc}
2 & 1\\
3 & 4
\end{array}\right]\right)=\left[\begin{array}{cc}
3 & 2\\
2 & 3
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Enumerate
הוקטורים 
\begin_inset Formula $\left\{ v_{1},v_{2}\right\} $
\end_inset

 שמצאנו בסעיף הקודם מהווים בסיס אורתונורמלי ל-
\begin_inset Formula $U$
\end_inset

, ולכן
\begin_inset Formula 
\begin{align*}
\text{P}_{U}^{\perp}\left(\left[\begin{array}{cc}
2 & 1\\
3 & 4
\end{array}\right]\right) & =\left\langle \left[\begin{array}{cc}
2 & 1\\
3 & 4
\end{array}\right],v_{1}\right\rangle \cdot v_{2}+\left\langle \left[\begin{array}{cc}
2 & 1\\
3 & 4
\end{array}\right],v_{1}\right\rangle \cdot v_{2}\\
 & =\text{tr}\left(\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]^{t}\left[\begin{array}{cc}
2 & 1\\
3 & 4
\end{array}\right]\right)\cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]\\
 & \quad+\text{tr}\left(\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]^{t}\left[\begin{array}{cc}
2 & 1\\
3 & 4
\end{array}\right]\right)\cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =\frac{6}{\sqrt{2}}\cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]+\frac{4}{\sqrt{2}}\cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =\left[\begin{array}{cc}
3 & 2\\
2 & 3
\end{array}\right]
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset Phantom Phantom
status open

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
נמצא את ההטלה לפי הבסיס הסטנדרטי
\begin_inset Formula 
\[
E=\left\{ e_{1}=\left[\begin{array}{cc}
1 & 0\\
0 & 0
\end{array}\right],e_{2}=\left[\begin{array}{cc}
0 & 1\\
0 & 0
\end{array}\right],e_{3}=\left[\begin{array}{cc}
0 & 0\\
1 & 0
\end{array}\right],e_{4}=\left[\begin{array}{cc}
0 & 0\\
0 & 1
\end{array}\right]\right\} 
\]

\end_inset


\begin_inset Formula 
\begin{align*}
\text{P}_{U}^{\perp}\left(\left[\begin{array}{cc}
1 & 0\\
0 & 0
\end{array}\right]\right) & =\sum_{i=1}^{2}\left\langle e_{1},v_{i}\right\rangle \cdot v_{i}\\
 & =\left\langle \left[\begin{array}{cc}
1 & 0\\
0 & 0
\end{array}\right],\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]\right\rangle \cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]\\
 & \quad+\left\langle \left[\begin{array}{cc}
1 & 0\\
0 & 0
\end{array}\right],\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\right\rangle \cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =\frac{1}{\sqrt{2}}\cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]+0\cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =\left[\begin{array}{cc}
1\slash2 & 0\\
0 & 1\slash2
\end{array}\right]=\frac{1}{2}e_{1}+0\cdot e_{2}+0\cdot e_{3}+\frac{1}{2}\cdot e_{4}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\text{P}_{U}^{\perp}\left(e_{2}\right) & =\sum_{i=1}^{2}\left\langle e_{2},v_{i}\right\rangle \cdot v_{i}\\
 & =\left\langle \left[\begin{array}{cc}
0 & 1\\
0 & 0
\end{array}\right],\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]\right\rangle \cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]\\
 & \quad+\left\langle \left[\begin{array}{cc}
0 & 1\\
0 & 0
\end{array}\right],\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\right\rangle \cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =0\cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]+\frac{1}{\sqrt{2}}\cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =\left[\begin{array}{cc}
0 & 1\slash2\\
1\slash2 & 0
\end{array}\right]=0\cdot e_{1}+\frac{1}{2}e_{2}+\frac{1}{2}e_{3}+e_{4}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\text{P}_{U}^{\perp}\left(e_{3}\right) & =\sum_{i=1}^{2}\left\langle e_{3},v_{i}\right\rangle \cdot v_{i}\\
 & =\left\langle \left[\begin{array}{cc}
0 & 0\\
1 & 0
\end{array}\right],\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]\right\rangle \cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]\\
 & \quad+\left\langle \left[\begin{array}{cc}
0 & 0\\
1 & 0
\end{array}\right],\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\right\rangle \cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =0\cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]+\frac{1}{\sqrt{2}}\cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =\left[\begin{array}{cc}
0 & 1\slash2\\
1\slash2 & 0
\end{array}\right]=0\cdot e_{1}+\frac{1}{2}e_{2}+\frac{1}{2}e_{3}+e_{4}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\text{P}_{U}^{\perp}\left(e_{4}\right) & =\sum_{i=1}^{2}\left\langle e_{4},v_{i}\right\rangle \cdot v_{i}\\
 & =\left\langle \left[\begin{array}{cc}
0 & 0\\
0 & 1
\end{array}\right],\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]\right\rangle \cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]\\
 & \quad+\left\langle \left[\begin{array}{cc}
0 & 0\\
0 & 1
\end{array}\right],\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\right\rangle \cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =\frac{1}{\sqrt{2}}\cdot\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right]+0\cdot\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right]\\
 & =\left[\begin{array}{cc}
1\slash2 & 0\\
0 & 1\slash2
\end{array}\right]=\frac{1}{2}e_{1}+0\cdot e_{2}+0\cdot e_{3}+\frac{1}{2}\cdot e_{4}
\end{align*}

\end_inset


\begin_inset Formula 
\[
\Longrightarrow\left[\text{P}_{U}^{\perp}\right]_{E}=\left[\begin{array}{cccc}
1\slash2 & 0 & 0 & 1\slash2\\
0 & 1\slash2 & 1\slash2 & 0\\
0 & 1\slash2 & 1\slash2 & 0\\
1\slash2 & 0 & 0 & 1\slash2
\end{array}\right]
\]

\end_inset


\end_layout

\begin_layout Enumerate
נמצא את ההטלה לפי הבסיס
\begin_inset Formula 
\[
B=\left\{ \left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & 1\slash\sqrt{2}
\end{array}\right],\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
1\slash\sqrt{2} & 0
\end{array}\right],\left[\begin{array}{cc}
1\slash\sqrt{2} & 0\\
0 & -1\slash\sqrt{2}
\end{array}\right],\left[\begin{array}{cc}
0 & 1\slash\sqrt{2}\\
-1\slash\sqrt{2} & 0
\end{array}\right]\right\} 
\]

\end_inset


\end_layout

