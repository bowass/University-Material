\begin_layout Exercise*
הוכיחו שלכל 
\begin_inset Formula $A\in M_{n}\left(\mathbb{C}\right)$
\end_inset

 קיימות 
\begin_inset Formula $X$
\end_inset

 הרמיטית, 
\begin_inset Formula $Y$
\end_inset

 אנטי-הרמיטית כך ש-
\begin_inset Formula $A=X+Y$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Solution*
תהי 
\begin_inset Formula $A\in M_{n}\left(\mathbb{C}\right)$
\end_inset

.
 נחפש 
\begin_inset Formula $X,Y$
\end_inset

 כך ש-
\begin_inset Formula $A=X+Y$
\end_inset

.
\end_layout

\begin_layout Solution*
במקרה זה, נקבל
\begin_inset Formula 
\begin{align*}
A^{\ast} & =X^{\ast}+Y^{\ast}\\
 & =X-Y
\end{align*}

\end_inset


\begin_inset Formula 
\[
\left\{ \begin{array}{c}
A+A^{\ast}=2X\\
A-A^{\ast}=2Y
\end{array}\right.\Longrightarrow\left\{ \begin{array}{c}
X=\frac{1}{2}\left(A+A^{\ast}\right)\\
Y=\frac{1}{2}\left(A-A^{\ast}\right)
\end{array}\right.
\]

\end_inset


\end_layout

\begin_layout Solution*
נגדיר 
\begin_inset Formula $X=\frac{1}{2}\left(A+A^{\ast}\right)$
\end_inset

 ו-
\begin_inset Formula $Y=\frac{1}{2}\left(A-A^{\ast}\right)$
\end_inset

: ברור כי 
\begin_inset Formula $X+Y=A$
\end_inset

.
\begin_inset Formula 
\[
X^{\ast}=\left(\frac{1}{2}\left(A+A^{\ast}\right)\right)^{\ast}=\frac{1}{2}\left(A+A^{\ast}\right)^{\ast}=\frac{1}{2}\left(A^{\ast}+A^{\ast\ast}\right)=\frac{1}{2}\left(A^{\ast}+A\right)=X
\]

\end_inset


\begin_inset Formula 
\[
Y^{\ast}=\left(\frac{1}{2}\left(A-A^{\ast}\right)\right)^{\ast}=\frac{1}{2}\left(A-A^{\ast}\right)^{\ast}=\frac{1}{2}\left(A^{\ast}-A^{\ast\ast}\right)=-\frac{1}{2}\left(A^{\ast}-A\right)=-Y
\]

\end_inset


\end_layout

\begin_layout Solution*
ולכן 
\begin_inset Formula $X$
\end_inset

 הרמיטית ו-
\begin_inset Formula $Y$
\end_inset

 אנטי-הרמיטית.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Definition*
תהי 
\begin_inset Formula $A\in M_{n}\left(\mathbb{C}\right)$
\end_inset

 מטריצה הרמיטית )סימטרית מעל 
\begin_inset Formula $\mathbb{R}$
\end_inset

(.
\end_layout

