\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
נוכיח ע
\begin_inset Quotes erd
\end_inset

י הכלה דו-כיוונית.
\end_layout

\begin_deeper
\begin_layout Itemize
\begin_inset Formula $\text{Ker}T^{\ast}\subseteq\left(\text{Im}T\right)^{\perp}$
\end_inset

.
 יהי 
\begin_inset Formula $z\in\text{Ker}T^{\ast}$
\end_inset

.
 צ
\begin_inset Quotes erd
\end_inset

ל כי 
\begin_inset Formula $z\in\left(\text{Im}T\right)^{\perp}$
\end_inset

 כלומר שלכל 
\begin_inset Formula $u\in\text{Im}T$
\end_inset

 מתקיים 
\begin_inset Formula $\left\langle z,u\right\rangle =0$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Itemize
יהי 
\begin_inset Formula $u\in\text{Im}T$
\end_inset

, ולכן קיים 
\begin_inset Formula $v\in V$
\end_inset

 כך ש-
\begin_inset Formula $Tv=u$
\end_inset

.
\begin_inset Formula 
\[
\left\langle u,z\right\rangle =\left\langle Tv,z\right\rangle =\left\langle v,T^{\ast}z\right\rangle \underset{z\in\text{Ker}T^{\ast}}{=}\left\langle v,0\right\rangle =0
\]

\end_inset

לכן 
\begin_inset Formula $z\in\left(\text{Im}T\right)^{\perp}$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Itemize
\begin_inset Formula $\left(\text{Im}T\right)^{\perp}\subseteq\text{Ker}T^{\ast}$
\end_inset

.
 יהי 
\begin_inset Formula $u\in\left(\text{Im}T\right)^{\perp}$
\end_inset

.
 כלומר לכל 
\begin_inset Formula $v\in\text{Im}T$
\end_inset

 מתקיים 
\begin_inset Formula $\left\langle v,u\right\rangle =0$
\end_inset

.
 צ
\begin_inset Quotes erd
\end_inset

ל כי 
\begin_inset Formula $u\in\text{Ker}T^{\ast}$
\end_inset

, כלומר 
\begin_inset Formula $T^{\ast}u=0$
\end_inset

.
\begin_inset Formula 
\[
\left\langle T^{\ast}u,T^{\ast}u\right\rangle =\left\langle {\color{gray}\underset{\in\text{Im}T}{\underbrace{{\normalcolor T\left(T^{\ast}u\right)}}}},{\color{gray}\underset{\in\left(\text{Im}T\right)^{\perp}}{\underbrace{{\normalcolor u}}}}\right\rangle =0\Longrightarrow T^{\ast}u=0
\]

\end_inset

בסך הכל, הוכחנו כי 
\begin_inset Formula $\text{Ker}T^{\ast}=\left(\text{Im}T\right)^{\ast}$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise*
יהי 
\begin_inset Formula $V$
\end_inset

 ממ
\begin_inset Quotes erd
\end_inset

פ.
 הראו שאם 
\begin_inset Formula $T\in End\left(V\right)$
\end_inset

 נורמלי )
\begin_inset Formula $TT^{\ast}=T^{\ast}T$
\end_inset

( אזי לכל 
\begin_inset Formula $v\in V$
\end_inset

 מתקיים 
\begin_inset Formula $\left\Vert T^{\ast}v\right\Vert =\left\Vert Tv\right\Vert $
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Solution*
מאחר ו-
\begin_inset Formula $\left\Vert \cdot\right\Vert \ge0$
\end_inset

, נראה כי 
\begin_inset Formula $\left\Vert T^{\ast}v\right\Vert ^{2}=\left\Vert Tv\right\Vert ^{2}$
\end_inset


\begin_inset Formula 
\begin{align*}
\left\Vert Tv\right\Vert ^{2} & =\left\langle Tv,Tv\right\rangle \\
 & =\left\langle v,T^{\ast}Tv\right\rangle \\
 & =\left\langle v,TT^{\ast}v\right\rangle \\
 & =\overline{\left\langle TT^{\ast}v,v\right\rangle }\\
 & =\overline{\left\langle T^{\ast}v,T^{\ast}v\right\rangle }\\
 & =\left\langle T^{\ast}v,T^{\ast}v\right\rangle \\
 & =\left\Vert T^{\ast}v\right\Vert ^{2}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

