\begin_deeper
\begin_layout Enumerate
המכפלה הפנימית הסטנדרטית על 
\begin_inset Formula $\mathbb{R}^{n}$
\end_inset

 )מכפלה סקלרית(:
\begin_inset Formula 
\[
\left\langle \left[\begin{array}{c}
v_{1}\\
\vdots\\
v_{n}
\end{array}\right],\left[\begin{array}{c}
u_{1}\\
\vdots\\
u_{n}
\end{array}\right]\right\rangle =\sum_{i=1}^{n}v_{i}u_{i}=v_{1}u_{1}+\dots+v_{n}u_{n}
\]

\end_inset


\end_layout

\begin_layout Enumerate
המכפלה הפנימית הסטנדרטית על 
\begin_inset Formula $\mathbb{C}^{n}$
\end_inset

:
\begin_inset Formula 
\[
\left\langle \left[\begin{array}{c}
v_{1}\\
\vdots\\
v_{n}
\end{array}\right],\left[\begin{array}{c}
u_{1}\\
\vdots\\
u_{n}
\end{array}\right]\right\rangle =\sum_{i=1}^{n}v_{i}\overline{u_{i}}=v_{1}\overline{u_{1}}+\dots+v_{n}\overline{u_{n}}
\]

\end_inset

למשל:
\begin_inset Formula 
\[
\left\langle \left[\begin{array}{c}
1\\
2\\
i
\end{array}\right],\left[\begin{array}{c}
1+i\\
0\\
2
\end{array}\right]\right\rangle =1\cdot\overline{\left(1+i\right)}+2\cdot\overline{0}+i\cdot\overline{2}=1-i+0+2i=1+i
\]

\end_inset


\end_layout

\begin_layout Enumerate
במרחב 
\begin_inset Formula $V=M_{n}\left(\mathbb{R}\right)$
\end_inset

 נגדיר מכפלה פנימית באופן הבא:
\begin_inset Formula 
\[
\forall A,B\in V:\left\langle A,B\right\rangle =\text{tr}\left(B^{t}A\right)
\]

\end_inset

אם 
\begin_inset Formula $V=M_{n}\left(\mathbb{C}\right)$
\end_inset

 נגדיר 
\begin_inset Formula $\left\langle A,B\right\rangle =\text{tr}\left(B^{\ast}A\right)$
\end_inset

 )נדבר על כך בהמשך(.
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise*
יהי 
\begin_inset Formula $V$
\end_inset

 ממ
\begin_inset Quotes erd
\end_inset

פ מעל 
\begin_inset Formula $\mathbb{C}$
\end_inset

 ויהיו 
\begin_inset Formula $u,v\in V$
\end_inset

 כך ש-
\begin_inset Formula $\left\langle v,v\right\rangle =2$
\end_inset

, 
\begin_inset Formula $\left\langle u,u\right\rangle =1$
\end_inset

 ו-
\begin_inset Formula $\left\langle u,v\right\rangle =2i$
\end_inset

.
\end_layout

\begin_layout Exercise*
מצאו את 
\begin_inset Formula $\left\langle u+v,u-2v\right\rangle $
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Solution*
\begin_inset Formula $\vphantom{}$
\end_inset


\begin_inset Formula 
\begin{align*}
\left\langle u+v,u-2v\right\rangle  & =\left\langle u+v,u\right\rangle +\left\langle u+v,-2v\right\rangle \\
 & =\left\langle u,u\right\rangle +\left\langle v,u\right\rangle +\left\langle u,-2v\right\rangle +\left\langle v,-2v\right\rangle \\
 & =1+\overline{2i}+\overline{-2}\left\langle u,v\right\rangle +\overline{-2}\left\langle v,v\right\rangle \\
 & =1-2i-2\cdot2i-2\cdot2\\
 & =\boxed{-3-6i}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise*
תהי 
\begin_inset Formula $A=\left[\begin{array}{cc}
a & b\\
b & c
\end{array}\right]\in M_{2}\left(\mathbb{R}\right)$
\end_inset

, נניח כי 
\begin_inset Formula $\det\left(A\right),a>0$
\end_inset

.
 נגדיר 
\begin_inset Formula $\left\langle ,\right\rangle :\mathbb{R}^{2}\times\mathbb{R}^{2}\to\mathbb{R}$
\end_inset

 ע
\begin_inset Quotes erd
\end_inset

י 
\begin_inset Formula $\left\langle u,v\right\rangle =u^{t}Av$
\end_inset

.
 הוכיחו כי 
\begin_inset Formula $\left\langle ,\right\rangle $
\end_inset

 היא מכפלה פנימית על 
\begin_inset Formula $\mathbb{R}^{2}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Solution*
יהיו 
\begin_inset Formula $u,v,w\in\mathbb{R}^{2}$
\end_inset

 ו-
\begin_inset Formula $\alpha\in\mathbb{R}$
\end_inset

:
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $\left\langle u+v,w\right\rangle =\left(u+v\right)^{t}Aw=u^{t}Aw+v^{t}Aw=\left\langle u,w\right\rangle +\left\langle v,w\right\rangle $
\end_inset

.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\left\langle \alpha v,w\right\rangle =\left(\alpha v\right)^{t}Aw=\alpha v^{t}Aw=\alpha\left\langle v,w\right\rangle $
\end_inset

.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\left\langle v,w\right\rangle =v^{t}Aw{\color{gray}\underset{v^{t}Aw\in M_{1}\left(\mathbb{R}\right)}{\underbrace{{\normalcolor =}}}}\left(v^{t}Aw\right)^{t}=w^{t}A^{t}v^{tt}{\color{gray}\underset{A=A^{t}}{\underbrace{{\normalcolor =}}}}w^{t}Av=\left\langle w,v\right\rangle $
\end_inset

.
\end_layout

\begin_layout Enumerate
יהי 
\begin_inset Formula $\mathbb{R}^{2}\ni\left[\begin{array}{c}
x\\
y
\end{array}\right]\ne0$
\end_inset

, נוכיח 
\begin_inset Formula $\left\langle \left[\begin{array}{c}
x\\
y
\end{array}\right],\left[\begin{array}{c}
x\\
y
\end{array}\right]\right\rangle \in\left(0,\infty\right)$
\end_inset

:
\begin_inset Formula 
\begin{align*}
\left\langle \left[\begin{array}{c}
x\\
y
\end{array}\right],\left[\begin{array}{c}
x\\
y
\end{array}\right]\right\rangle  & =\left[\begin{array}{cc}
x & y\end{array}\right]\left[\begin{array}{cc}
a & b\\
b & c
\end{array}\right]\left[\begin{array}{c}
x\\
y
\end{array}\right]\\
 & =\left[\begin{array}{cc}
x & y\end{array}\right]\left[\begin{array}{c}
ax+by\\
bx+cy
\end{array}\right]\\
 & =x\left(ax+by\right)+y\left(bx+cy\right)\\
 & =ax^{2}+2xyb+cy^{2}
\end{align*}

\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
אם 
\begin_inset Formula $y=0$
\end_inset

 אז בהכרח 
\begin_inset Formula $x\ne0$
\end_inset

 ולכן 
\begin_inset Formula $x^{2}>0$
\end_inset

.
 מאחר ו-
\begin_inset Formula $a>0$
\end_inset

 מתקיים
\begin_inset Formula 
\[
\left\langle \left[\begin{array}{c}
x\\
y
\end{array}\right],\left[\begin{array}{c}
x\\
y
\end{array}\right]\right\rangle =ax^{2}>0
\]

\end_inset

אחרת, 
\begin_inset Formula $y\ne0$
\end_inset

:
\begin_inset Formula 
\[
\left\langle \left[\begin{array}{c}
x\\
y
\end{array}\right],\left[\begin{array}{c}
x\\
y
\end{array}\right]\right\rangle =ax^{2}+2xyb+cy^{2}={\color{gray}\underset{>0}{\underbrace{{\normalcolor y^{2}}}}}\cdot\left[a\left(\frac{x}{y}\right)^{2}+2b\frac{x}{y}+c\right]
\]

\end_inset

נותר להוכיח כי 
\begin_inset Formula $a\left(\frac{x}{y}\right)^{2}+2b\frac{x}{y}+c>0$
\end_inset

:
\end_layout

\begin_deeper
\begin_layout Itemize
הפרבולה 
\begin_inset Formula $at^{2}+2bt+c$
\end_inset

 מחייכת, והדיסקרימיננטה שלה שווה ל-
\begin_inset Formula $\left(2b\right)^{2}-4ac=4b^{2}-4ac=-4\left(ac-b^{2}\right)=-4\det\left(A\right)<0$
\end_inset

.
\end_layout

\begin_layout Itemize
מכאן, הפרבולה נמצאת מעל ציר ה-
\begin_inset Formula $t$
\end_inset

 ותמיד חיובית.
\end_layout

\end_deeper
\begin_layout Itemize
קיבלנו כי בכל מקרה 
\begin_inset Formula $\left\langle v,v\right\rangle =y^{2}\cdot\left[a\left(\frac{x}{y}\right)^{2}+2b\frac{x}{y}+c\right]>0$
\end_inset

.
\end_layout

\begin_layout Itemize
מכאן, 
\begin_inset Formula $\left\langle v,v\right\rangle =0$
\end_inset

 
\begin_inset Formula $\Longleftrightarrow$
\end_inset

 
\begin_inset Formula $v=0$
\end_inset

.
\end_layout

\end_deeper
\end_deeper
