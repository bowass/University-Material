\begin_deeper
\begin_layout Enumerate
נקבע את הבסיס להיות 
\begin_inset Formula $E=\left\{ 1,x,x^{2}\right\} $
\end_inset

.
\begin_inset Formula 
\[
T\left(1\right)=1_{2x}+1_{x-1}=2=2\cdot1+0\cdot x+0\cdot x^{2}
\]

\end_inset


\begin_inset Formula 
\[
T\left(x\right)=2x+\left(x-1\right)=3x-1=-1\cdot1+3\cdot x+0\cdot x^{2}
\]

\end_inset


\begin_inset Formula 
\[
T\left(x^{2}\right)=4x^{2}+\left(x-1\right)^{2}=5x^{2}-2x+1=1\cdot1+2\cdot x+5\cdot x^{2}
\]

\end_inset


\begin_inset Formula 
\[
\Longrightarrow\left[T\right]_{E}=\left[\begin{array}{ccc}
2 & -1 & 1\\
0 & 3 & 2\\
0 & 0 & 5
\end{array}\right]\Longrightarrow\boxed{\Delta_{T}\left(x\right)=\left(x-2\right)\left(x-3\right)\left(x-5\right)}
\]

\end_inset


\end_layout

