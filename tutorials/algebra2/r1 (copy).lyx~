\begin_deeper
\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\Delta_{A+2I_{n}}\left(x\right) & =\det\left(xI_{n}-\left(A+2I_{n}\right)\right)\\
 & =\det\left(\left(x-2\right)I_{n}-A\right)\\
 & =\boxed{f\left(x-2\right)}
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\Delta_{3A}\left(x\right) & =\det\left(xI_{n}-3A\right)\\
 & =\det\left(3\left(\frac{1}{3}xI_{n}-A\right)\right)\\
 & =3^{n}\det\left(\left(\frac{1}{3}x\right)I_{n}-A\right)\\
 & =\boxed{3^{n}f\left(\frac{1}{3}x\right)}
\end{align*}

\end_inset


