\begin_deeper
\begin_layout Enumerate
ייתכן ש-
\begin_inset Formula $f$
\end_inset

 חח
\begin_inset Quotes erd
\end_inset

ע.
 למשל,
 עבור 
\begin_inset Formula $A=\left\{ 1,2\right\} ,B=\left\{ 1,2,3\right\} $
\end_inset

 ו-
\begin_inset Formula $f\left(1\right)=f\left(2\right)=1$
\end_inset

 נקבל ש-
\begin_inset Formula $f$
\end_inset

 לא חח
\begin_inset Quotes erd
\end_inset

ע,
 אך עבור 
\begin_inset Formula $f\left(1\right)=1,f\left(2\right)=2$
\end_inset

 נקבל ש-
\begin_inset Formula $f$
\end_inset

 חח
\begin_inset Quotes erd
\end_inset

ע.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $f$
\end_inset

 בהכרח לא על.
 נניח בשלילה ש-
\begin_inset Formula $f$
\end_inset

 על,
 אזי 
\begin_inset Formula $\left|\text{Im}\left(f\right)\right|=\left|B\right|$
\end_inset

.
 בנוסף 
\begin_inset Formula $\left|\text{Im}\left(f\right)\right|=\left|f\left(A\right)\right|\le\left|A\right|$
\end_inset

,
 בסתירה לכך ש-
\begin_inset Formula $\left|A\right|<\left|B\right|$
\end_inset

.
\end_layout

\end_deeper
