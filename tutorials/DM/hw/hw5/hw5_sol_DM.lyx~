\begin_inset Formula 
\begin{align*}
\mathcal{H}= & \left\{ \left\{ 1\right\} ,\left\{ 2\right\} ,\left\{ 3\right\} ,\left\{ 4\right\} \right\} \cup\\
 & \left\{ \left\{ \left\{ 1,2\right\} ,\left\{ 3\right\} ,\left\{ 4\right\} \right\} ,\left\{ \left\{ 1,3\right\} ,\left\{ 2\right\} ,\left\{ 4\right\} \right\} ,\left\{ \left\{ 1,4\right\} ,\left\{ 2\right\} ,\left\{ 3\right\} \right\} \right\} \cup\\
 & \left\{ \left\{ \left\{ 1\right\} ,\left\{ 2,3\right\} ,\left\{ 4\right\} \right\} ,\left\{ \left\{ 1\right\} ,\left\{ 2,4\right\} ,\left\{ 4\right\} \right\} ,\left\{ \left\{ 1\right\} ,\left\{ 2\right\} ,\left\{ 3,4\right\} \right\} \right\} \cup\\
 & \left\{ \left\{ \left\{ 1,2\right\} ,\left\{ 3,4\right\} \right\} ,\left\{ \left\{ 1,3\right\} ,\left\{ 2,4\right\} \right\} ,\left\{ \left\{ 1,4\right\} ,\left\{ 2,3\right\} \right\} \right\} \cup\\
 & \left\{ \left\{ \left\{ 1\right\} ,\left\{ 2,3,4\right\} \right\} ,\left\{ \left\{ 2\right\} ,\left\{ 1,3,4\right\} \right\} ,\left\{ \left\{ 3\right\} ,\left\{ 1,2,4\right\} \right\} ,\left\{ \left\{ 4\right\} ,\left\{ 1,2,3\right\} \right\} \right\} \\
 & \left\{ \left\{ \left\{ 1,2,3,4\right\} \right\} \right\} .
\end{align*}

\end_inset


\end_layout

