\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $h$
\end_inset

 היא חח
\begin_inset Quotes erd
\end_inset

ע:
 תהיינה 
\begin_inset Formula $A,B\in\mathcal{P}\left(\mathbb{R}\right)$
\end_inset

 כך ש-
\begin_inset Formula $h\left(A\right)=h\left(B\right)$
\end_inset

.
 אזי 
\begin_inset Formula $A\triangle\mathbb{N}=B\triangle\mathbb{N}$
\end_inset

.
 לכן מתרגיל בית קודם נקבל
\begin_inset Formula 
\[
\left(A\triangle\mathbb{N}\right)\triangle\mathbb{N}=\left(B\triangle\mathbb{N}\right)\triangle\mathbb{N}\implies A=B.
\]

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $h$
\end_inset

 היא על:
 תהי 
\begin_inset Formula $B\in\mathcal{P}\left(\mathbb{R}\right)$
\end_inset

.
 נגדיר 
\begin_inset Formula $A=B\triangle\mathbb{N}$
\end_inset

 ונקבל
\begin_inset Formula 
\[
h\left(A\right)=\left(B\triangle\mathbb{N}\right)\triangle\mathbb{N}=B\triangle\left(\mathbb{N}\triangle\mathbb{N}\right)=B\triangle\emptyset=B.
\]

\end_inset


\end_layout

\begin_layout Enumerate
קיבלנו כי 
\begin_inset Formula $g$
\end_inset

 היא חח
\begin_inset Quotes erd
\end_inset

ע ועל ולכן הפיכה.
 מהסעיף הקודם ראינו כי לכל 
\begin_inset Formula $A,B\in\mathcal{P}\left(\mathbb{R}\right)$
\end_inset

,
 
\begin_inset Formula $h\left(A\right)=B$
\end_inset

 אמ
\begin_inset Quotes erd
\end_inset

מ 
\begin_inset Formula $A=B\triangle\mathbb{N}$
\end_inset

.
 לכן הפונקציה ההופכית 
\begin_inset Formula $h^{-1}:\mathcal{P}\left(\mathbb{R}\right)\rightarrow\mathcal{P}\left(\mathbb{R}\right)$
\end_inset

 היא 
\begin_inset Formula $h^{-1}=h$
\end_inset

.
\end_layout

\begin_layout Description
הערה:
 פונקציה שהופכיות לעצמן (כמו סעיפים ב.,
 ג.) נקראת 
\bar under
אינבולוציה
\bar default
 (
\lang english
Involution
\lang hebrew
).
\end_layout

