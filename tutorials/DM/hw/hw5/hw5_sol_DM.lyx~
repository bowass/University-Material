\end_deeper
\begin_layout Enumerate
אם לכל 
\begin_inset Formula $x\in A$
\end_inset

 קיים 
\begin_inset Formula $y\in A$
\end_inset

 כך ש-
\begin_inset Formula $x\mathrel{R}y$
\end_inset

 אז 
\begin_inset Formula $R$
\end_inset

 יחס שקילות.
\end_layout

\begin_deeper
\begin_layout Itemize
יהי 
\begin_inset Formula $x\in A$
\end_inset

.
 אזי קיים 
\begin_inset Formula $y\in A$
\end_inset

 כך ש-
\begin_inset Formula $\left(x,y\right)\in R$
\end_inset

.
 מכיוון ש-
\begin_inset Formula $R$
\end_inset

 סימטרי מתקיים 
\begin_inset Formula $\left(y,x\right)\in R$
\end_inset

.
\end_layout

\begin_layout Itemize
מטרנזיטיביות 
\begin_inset Formula $R$
\end_inset

 נקבל ש-
\begin_inset Formula $\left(x,x\right)\in R$
\end_inset

 (
\begin_inset Formula $\left(x,y\right)\in R\wedge\left(y,x\right)\in R\implies\left(x,x\right)\in R$
\end_inset

).
\end_layout

