\end_inset

 טרנזיטיבי אז 
\begin_inset Formula $S\subseteq R$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Itemize
יהיו 
\begin_inset Formula $\left(x,y\right)\in S$
\end_inset

.
 אזי קיים 
\begin_inset Formula $z\in A$
\end_inset

 כך ש-
\begin_inset Formula $\left(x,z\right)\in R$
\end_inset

 וגם 
\begin_inset Formula $\left(z,y\right)\in R$
\end_inset

.
 מטרנזיטיביות 
\begin_inset Formula $R$
\end_inset

 נקבל ש-
\begin_inset Formula $\left(x,y\right)\in R$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Enumerate
אם 
\begin_inset Formula $S\subseteq R$
\end_inset

 אז 
\begin_inset Formula $R$
\end_inset

 טרנזיטיבי.
\end_layout

\begin_deeper
\begin_layout Itemize
יהיו 
\begin_inset Formula $a,b,c\in A$
\end_inset

 כך ש-
\begin_inset Formula $\left(a,b\right)\in R$
\end_inset

 וגם 
\begin_inset Formula $\left(b,c\right)\in R$
\end_inset

.
 מהגדרת 
\begin_inset Formula $S$
\end_inset

 נקבל ש-
\begin_inset Formula $\left(a,c\right)\in S$
\end_inset

,
 ומכיוון ש-
\begin_inset Formula $S\subseteq R$
\end_inset

 נקבל ש-
\begin_inset Formula $\left(a,c\right)\in R$
\end_inset

.
\end_layout

\end_deeper
