\begin_deeper
\begin_layout Enumerate
הפרכה:
 עבור 
\begin_inset Formula $A=\left\{ 1,2,3\right\} $
\end_inset

,
 נסתכל על יחסי השקילות 
\begin_inset Formula 
\[
\begin{array}{c}
R_{1}=\left\{ \left(1,1\right),\left(2,2\right),\left(3,3\right),\left(1,3\right),\left(3,1\right)\right\} ,\\
R_{2}=\left\{ \left(1,1\right),\left(2,2\right),\left(3,3\right),\left(2,3\right),\left(3,2\right)\right\} 
\end{array}
\]

\end_inset


\begin_inset Formula 
\[
\implies R_{1}\cup R_{2}=\left\{ \left(1,1\right),\left(2,2\right),\left(3,3\right),\left(1,3\right),\left(3,1\right),\left(2,3\right),\left(3,2\right)\right\} 
\]

\end_inset

נשים לב ש-
\begin_inset Formula $R_{1}\cup R_{2}$
\end_inset

 לא טרנזיטיבי:
 
\begin_inset Formula $\left(1,3\right),\left(3,2\right)\in R_{1}\cup R_{2}$
\end_inset

 אבל 
\begin_inset Formula $\left(1,2\right)\notin R_{1}\cup R_{2}$
\end_inset

.
\end_layout

\begin_layout Enumerate
הפרכה:
 עבור 
\begin_inset Formula $A=\left\{ 1,2,3\right\} $
\end_inset

,
 נסתכל על יחסי הסדר החלקיים 
\begin_inset Formula $R_{1}=\left\{ \left(1,1\right),\left(2,2\right),\left(3,3\right),\left(1,3\right)\right\} $
\end_inset

 ו-
\begin_inset Formula 
\[
R_{2}=\left\{ \left(1,1\right),\left(2,2\right),\left(3,3\right),\left(3,2\right)\right\} .
\]

\end_inset


\begin_inset Formula 
\[
\implies R_{1}\cup R_{2}=\left\{ \left(1,1\right),\left(2,2\right),\left(3,3\right),\left(1,3\right),\left(3,2\right)\right\} 
\]

\end_inset

נשים לב ש-
\begin_inset Formula $R_{1}\cup R_{2}$
\end_inset

 לא טרנזיטיבי:
 
\begin_inset Formula $\left(1,3\right),\left(3,2\right)\in R_{1}\cup R_{2}$
\end_inset

 אבל 
\begin_inset Formula $\left(1,2\right)\notin R_{1}\cup R_{2}$
\end_inset

.
 בנוסף,
 עבור 
\begin_inset Formula $R_{2}=\left\{ \left(1,1\right),\left(2,2\right),\left(3,3\right),\left(3,1\right)\right\} $
\end_inset

 נקבל ש-
\begin_inset Formula $R_{1}\cup R_{2}$
\end_inset

 אינו אנטי-סימטרי חלש.
\end_layout

\begin_layout Enumerate
הפרכה:
 עבור יחס השקילות 
\begin_inset Formula $R=\left\{ \left(x,x\right)\mid x\in\mathbb{N}\right\} $
\end_inset

 מעל 
\begin_inset Formula $\mathbb{N}$
\end_inset

 נקבל 
\begin_inset Formula $R\triangle R=\emptyset$
\end_inset

,
 וזהו לא יחס רפלקסיבי.
\end_layout

\begin_layout Enumerate
הפרכה:
 עבור יחס הסדר החלקי 
\begin_inset Formula $R=\left\{ \left(x,y\right)\in\mathbb{N}^{2}\mid x\le y\right\} $
\end_inset

 מעל 
\begin_inset Formula $\mathbb{N}$
\end_inset

 נקבל 
\begin_inset Formula $R\triangle R=\emptyset$
\end_inset

,
 וזהו לא יחס רפלקסיבי.
\end_layout

\end_deeper
