\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $f$
\end_inset

 היא חח
\begin_inset Quotes erd
\end_inset

ע:
 יהיו 
\begin_inset Formula $x,x^{\prime}\in\left(1,\infty\right)$
\end_inset

 כך ש-
\begin_inset Formula $f\left(x\right)=f\left(x^{\prime}\right)$
\end_inset

.
 אזי,
\begin_inset Formula 
\[
1-\frac{1}{x}=1-\frac{1}{x^{\prime}}\iff-\frac{1}{x}=-\frac{1}{x^{\prime}}\iff x=x^{\prime}.
\]

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $f$
\end_inset

 היא על:
 יהי 
\begin_inset Formula $y\in\left(0,1\right)$
\end_inset

.
 נרצה למצוא 
\begin_inset Formula $x\in\left(1,\infty\right)$
\end_inset

 כך ש-
\begin_inset Formula $f\left(x\right)=y$
\end_inset

.
\begin_inset Formula 
\[
f\left(x\right)=y\iff1-\frac{1}{x}=y\iff\frac{1}{x}=1-y\iff x=\frac{1}{1-y}
\]

\end_inset

נשים לב שמכיוון ש-
\begin_inset Formula $y\in\left(0,1\right)$
\end_inset

,
 
\begin_inset Formula $1-y\in\left(0,1\right)$
\end_inset

 וכך 
\begin_inset Formula $x=1/\left(1-y\right)\in\left(1,\infty\right)$
\end_inset

.
 לכן עבור 
\begin_inset Formula $x=1/\left(1-y\right)$
\end_inset

 נקבל 
\begin_inset Formula $f\left(x\right)=y$
\end_inset

.
\end_layout

\begin_layout Enumerate
קיבלנו כי 
\begin_inset Formula $f$
\end_inset

 היא חח
\begin_inset Quotes erd
\end_inset

ע ועל ולכן הפיכה.
 מהסעיף הקודם ראינו כי לכל 
\begin_inset Formula $x\in\left(1,\infty\right),y\in\left(0,1\right)$
\end_inset

 מתקיים
\begin_inset Formula 
\[
f\left(x\right)=y\iff x=\frac{1}{1-y},
\]

\end_inset

ולכן הפונקציה ההופכית היא 
\begin_inset Formula $f^{-1}:\left(0,1\right)\rightarrow\left(1,\infty\right)$
\end_inset

 כך ש-
\begin_inset Formula 
\[
\forall y\in\left(0,1\right):f^{-1}\left(y\right)=1/\left(1-y\right).
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset ERT
status open

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $g$
\end_inset

 היא חח
\begin_inset Quotes erd
\end_inset

ע:
 יהיו 
\begin_inset Formula $x,x^{\prime}\in\left(0,\infty\right)$
\end_inset

 כך ש-
\begin_inset Formula $g\left(x\right)=g\left(x^{\prime}\right)$
\end_inset

,
 אזי 
\begin_inset Formula $1/x=1/x^{\prime}$
\end_inset

 ולכן 
\begin_inset Formula $x=x^{\prime}$
\end_inset

.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $g$
\end_inset

 היא על:
 יהי 
\begin_inset Formula $y\in\left(0,\infty\right)$
\end_inset

.
 עבור 
\begin_inset Formula $x=1/y\in\left(0,\infty\right)$
\end_inset

 נקבל ש-
\begin_inset Formula $g\left(x\right)=1/\left(1/y\right)=y$
\end_inset

.
\end_layout

\begin_layout Enumerate
קיבלנו כי 
\begin_inset Formula $g$
\end_inset

 היא חח
\begin_inset Quotes erd
\end_inset

ע ועל ולכן הפיכה.
 מהסעיף הקודם ראינו כי לכל 
\begin_inset Formula $x,y\in\left(0,\infty\right)$
\end_inset

 מתקיים ש-
\begin_inset Formula $g\left(x\right)=y$
\end_inset

 אמ
\begin_inset Quotes erd
\end_inset

מ 
\begin_inset Formula $x=1/y$
\end_inset

,
 ולכן 
\begin_inset Formula $g^{-1}:\left(0,\infty\right)\rightarrow\left(0,\infty\right)$
\end_inset

 מקיימת
\begin_inset Formula 
\[
\forall y\in\left(0,\infty\right):g^{-1}\left(y\right)=g\left(y\right)=\frac{1}{y}.
\]

\end_inset


\end_layout

