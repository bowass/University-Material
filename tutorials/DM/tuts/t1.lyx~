\begin_layout Subsubsection*
מספר תכונות:
\end_layout

\begin_layout Enumerate
אסוציאטיביות (קיבוץ):
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $A\wedge\left(B\wedge C\right)\equiv\left(A\wedge B\right)\wedge C$
\end_inset

.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $A\vee\left(B\vee C\right)\equiv\left(A\vee B\right)\vee C$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Enumerate
דיסטריביוטיביות (פילוג):
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $A\wedge\left(B\vee C\right)\equiv\left(A\wedge B\right)\vee\left(A\wedge C\right)$
\end_inset

.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $A\vee\left(B\wedge C\right)\equiv\left(A\vee B\right)\wedge\left(A\vee C\right)$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Enumerate
כללי דה-מורגן:
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $\neg\left(A\wedge B\right)\equiv\neg A\vee\neg B$
\end_inset

.
\end_layout

\begin_layout Enumerate
\begin_inset Formula $\neg\left(A\vee B\right)\equiv\neg A\wedge\neg B$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise
\begin_inset Phantom HPhantom
status open

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
הביעו את הקשר 
\begin_inset Formula $\wedge$
\end_inset

 באמצעות 
\begin_inset Formula $\vee,\neg$
\end_inset

 בלבד.
\end_layout

\begin_layout Enumerate
הביעו את הקשר 
\begin_inset Formula $\vee$
\end_inset

 באמצעות 
\begin_inset Formula $\vee,\neg$
\end_inset

 בלבד.
\end_layout

\begin_layout Enumerate
הביעו את הקשר 
\begin_inset Formula $\rightarrow$
\end_inset

 באמצעות 
\begin_inset Formula $\vee,\neg$
\end_inset

 בלבד.
\end_layout

\begin_layout Enumerate
הביעו את הקשר 
\begin_inset Formula $\rightarrow$
\end_inset

 באמצעות 
\begin_inset Formula $\wedge,\neg$
\end_inset

 בלבד.
\end_layout

\begin_layout Enumerate
הביעו את הקשר 
\begin_inset Formula $\wedge$
\end_inset

 באמצעות 
\begin_inset Formula $\rightarrow,\neg$
\end_inset

 בלבד.
\end_layout

\begin_layout Enumerate
הביעו את הקשר 
\begin_inset Formula $\vee$
\end_inset

 באמצעות 
\begin_inset Formula $\rightarrow,\neg$
\end_inset

 בלבד.
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Solution
\begin_inset Phantom HPhantom
status open

\begin_layout Plain Layout

\end_layout

\end_inset


\end_layout

\begin_deeper
\begin_layout Enumerate
נשתמש בדה-מורגן ונקבל
\begin_inset Formula 
\[
\neg\left(p\wedge q\right)\equiv\neg p\vee\neg q\implies p\wedge q\equiv\neg\left(\neg p\vee\neg q\right).
\]

\end_inset


\end_layout

\begin_layout Enumerate
נשתמש בדה-מורגן ונקבל
\begin_inset Formula 
\[
\neg\left(p\vee q\right)\equiv\neg p\wedge\neg q\implies p\vee q\equiv\neg\left(\neg p\wedge\neg q\right).
\]

\end_inset


\end_layout

\begin_layout Enumerate
לפי טבלת האמת של 
\begin_inset Formula $\rightarrow$
\end_inset

,
 
\begin_inset Formula $p\rightarrow q\equiv\mathtt{T}$
\end_inset

 אמ
\begin_inset Quotes erd
\end_inset

מ (אם ורק אם) 
\begin_inset Formula $p\equiv\mathtt{F}$
\end_inset

,
 או ש-
\begin_inset Formula $q\equiv\mathtt{T}$
\end_inset

.
 לכן
\begin_inset Formula 
\[
p\rightarrow q\equiv\neg p\vee q.
\]

\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $p\rightarrow q\equiv\mathtt{F}$
\end_inset

 אמ
\begin_inset Quotes erd
\end_inset

מ 
\begin_inset Formula $p\equiv\mathtt{T}$
\end_inset

 וגם 
\begin_inset Formula $q\equiv\mathtt{F}$
\end_inset

.
 לכן,
\begin_inset Formula 
\[
p\rightarrow q\equiv\neg\left(p\wedge\neg q\right).
\]

\end_inset


\end_layout

\begin_layout Enumerate
ניעזר בסעיף הקודם:
 
\begin_inset Formula $\neg\left(p\rightarrow q\right)\equiv p\wedge\neg q$
\end_inset

,
 ולכן
\begin_inset Formula 
\[
p\wedge q\equiv\neg\left(p\rightarrow\neg q\right).
\]

\end_inset


\end_layout

\begin_layout Enumerate
ניעזר בסעיף הקודם:
 
\begin_inset Formula $p\rightarrow q\equiv\neg p\vee q$
\end_inset

,
 ולכן
\begin_inset Formula 
\[
p\vee q\equiv\left(\neg p\right)\rightarrow q.
\]

\end_inset

 
\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

